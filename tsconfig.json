{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "node16",
    "moduleResolution": "node16",
    "moduleDetection": "force",
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": false,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "ts-node": {
    "transpileOnly": true
  }
}
